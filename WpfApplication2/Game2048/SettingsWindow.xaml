<Window x:Class="UI.Game2048.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="设置名称" Height="285" Width="550" SizeToContent="Height">
    <Grid>
        <StackPanel>
            <TextBlock Margin="5" Text="方块显示名称，以逗号（英文）隔开，如“a,b,c”"/>
            <TextBox Name="text" Margin="5" Height="100" TextWrapping="Wrap"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="行数" Margin="5"/>
                <TextBox Name="rowCount"  Width="100" Margin="5"/>
                <TextBlock Text="列数" Margin="5"/>
                <TextBox Name="columnCount" Width="100" Margin="5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="确定" Width="100" HorizontalAlignment="Right" Margin="5" Click="Button_Click" />
                <Button Content="取消" Width="100" HorizontalAlignment="Right" Margin="5" Click="cancelButton_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
